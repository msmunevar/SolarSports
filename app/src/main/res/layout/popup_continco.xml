<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Contenido del cuadro emergente -->
    <LinearLayout
        android:id="@+id/popupContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Agrega aquí tus elementos de contenido como TextViews, EditTexts, Buttons, etc. -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            app:srcCompat="@drawable/advertencia" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hemos encontrado ningún usuario con estos datos, por favor regístrate para poder continuar" />

        <Button
            android:id="@+id/btnCerrar"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ACDECE"
            android:text="Cerrar"
            android:textColor="#02021E" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
